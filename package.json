{
  "version": "1.0.3",
  "name": "horizon",
  "displayName": "Horizon",
  "publisher": "code-cooking",
  "description": "Move pieces of code horizontally similar to how you move them vertically with `Alt+Up` and `Alt+Down`",
  "icon": "./logo/logo.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KacperKozak/VSCode-Horizon"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "horizon.move-right",
        "title": "Move right"
      },
      {
        "command": "horizon.move-left",
        "title": "Move left"
      }
    ],
    "keybindings": [
      {
        "command": "horizon.move-right",
        "key": "ctrl+alt+]",
        "mac": "cmd+alt+]",
        "when": "editorTextFocus"
      },
      {
        "command": "horizon.move-left",
        "key": "ctrl+alt+[",
        "mac": "cmd+alt+[",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "bun run compile && bun run lint",
    "lint": "oxlint --fix",
    "test:e2e": "node ./out/test/runTest.js",
    "test": "bun test src/lib/",
    "ts": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20",
    "@types/vscode": "^1.79.0",
    "@vscode/test-electron": "^2.3.2",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "oxlint": "^1.13.0",
    "typescript": "^5.1.3"
  },
  "packageManager": "bun@1.2.19"
}
